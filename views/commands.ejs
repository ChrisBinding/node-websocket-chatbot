<!DOCTYPE html>
<html lang="en">

  <% include partials\head.ejs %>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="./">Home</a></li>
            <li class="active"><a href="./commands">Chat Commands</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <div class="starter-template">
        <h1><%= title %></h1>
        <p class="lead"><%= infoMsg %></p>

        <!--  FORM TO EDIT CHAT COMMANDS  -->
        <form action="/commands" method="post">
        <div class="input-group">
          <div class="col-xs-10">
          <span class="input-group-addon" id="basic-addon1">Command 1</span>
          <input type="text" id="command1" name="command1" class="form-control" value="<%= command1 %>" aria-describedby="basic-addon1">
          <input type="text" id="command1Output" name="command1Output" class="form-control" value="<%= command1Output %>" aria-describedby="basic-addon1">
          <span class="input-group-addon" id="basic-addon1">Command 2</span>
          <input type="text" id="command2" name="command2" class="form-control" value="<%= command2 %>" aria-describedby="basic-addon1">
          <input type="text" id="command2Output" name="command2Output" class="form-control" value="<%= command2Output %>" aria-describedby="basic-addon1">
          <span class="input-group-addon" id="basic-addon1">Command 3</span>
          <input type="text" id="command3" name="command3" class="form-control" value="<%= command3 %>" aria-describedby="basic-addon1">
          <input type="text" id="command3Output" name="command3Output" class="form-control" value="<%= command3Output %>" aria-describedby="basic-addon1">
          <span class="input-group-addon" id="basic-addon1">Command 4</span>
          <input type="text" id="command4" name="command4" class="form-control" value="<%= command4 %>" aria-describedby="basic-addon1">
          <input type="text" id="command4Output" name="command4Output" class="form-control" value="<%= command4Output %>" aria-describedby="basic-addon1">
          <span class="input-group-addon" id="basic-addon1">Command 5</span>
          <input type="text" id="command5" name="command5" class="form-control" value="<%= command5 %>" aria-describedby="basic-addon1">
          <input type="text" id="command5Output" name="command5Output" class="form-control" value="<%= command5Output %>" aria-describedby="basic-addon1">
          <button type="submit" id="poke" class="btn btn-success">Save Changes</button>
          </form>
        </div>
      </div>

      </div>

    </div><!-- /.container -->

    <% include partials\jsincludes.ejs %>
  </body>
</html>
